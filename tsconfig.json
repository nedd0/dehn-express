{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2022",
      "composite": true,
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "strict": false,
      "declaration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true
    },
    "include": [
      "./**/*.ts",
      "./**/*.config.ts",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "test"
    ]
  }
